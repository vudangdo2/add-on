

function addVisitLF(id){
  var childWindow;
  
   setTimeout(function(){
        childWindow = open(base + "/surf.php?sid=" + id + "&rand=" + Math.random(), "View");
   } , 1000);
   
   setTimeout(function(){$.ajax({
            type: "POST",
            url: "system/modules/surf/process.php",
            cache: false,
            data: "cpc=true&data="+id,
            success: function(d) {
              childWindow.close();
            }
        }); } , 1000);
   
}



